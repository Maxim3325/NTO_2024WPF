<Page x:Class="NTO_2024WPF.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NTO_2024WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="EnterBtn" Content="Развлекательная деятельность" Height="30" Width="190" HorizontalAlignment="Center" Margin="5" Click="EnterBtn_Click"/>
        <Button x:Name="EducationBtn" Content="Образовательная деятельность" Height="30" Width="190" HorizontalAlignment="Center" Margin="5" Click="EducationBtn_Click"/>
        <Button x:Name="CultureBtn" Content="Культурно-просветительская деятельность" Height="30" Width="190" HorizontalAlignment="Center" Margin="5" Click="CultureBtn_Click"/>
    </StackPanel>
</Page>